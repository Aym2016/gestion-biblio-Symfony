    {% for message in app.flashes('success') %}
    <h2>{{ message}}</h2>
    {% endfor %}
           <div class="alert alert-success">
          <strong>Success!</strong> Indicates a successful or positive action.
</div>
     <p><a href="{{ path('categorie_new')}}" class="btn btn-success" >Ajouter une nouvelle cat√©gorie</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <p><a href="{{ path('categorie_show', {'id': categorie.id}) }}">show</a></p>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
