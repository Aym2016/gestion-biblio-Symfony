{% extends 'base.html.twig' %}
{%block title%}Authentification{% endblock %}
{%block body%}
	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
<h1>connexion</h1>
<form action="{{path('security_login')}}" method="post">
	<div class="form-group">
		<input placeholder="Adress email ..." required="required" name="_username" type="text" class="form-control" value="{{ last_username }}" >
	</div>
	<div class="form-group">
		<input placeholder="Mot de passe ..." required ="required" name="_password" type="password" class="form-control" >
	</div>
	<div class="form-group">
		<button type="submit" class="btn-primary btn" >connexion</button>
	</div>

	<!--<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">-->
	<input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
	</form>


	
	
{%endblock%}